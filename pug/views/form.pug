extends ./layouts/index

block section

        h2(class="formTitle") Ingrese nuevo producto  
        form(class="form row g-4 mg-4",action="/productos", method="POST")
            div(class="col-sm-8")
                label(for="a",class="form-label m-2") Nombre
                input(id="a", class="form-control m-2 ", type="text", name="nombre", placeholder="ingrese el nombre")
            div(class="col-sm-8")
                label(for="b",class="form-label m-2") Precio
                input(id="b", class="form-control m-2", type="text", name="precio", placeholder="ingrese el precio")
            div(class="col-sm-8")
                label(for="c",class="form-label m-2") URL
                input(id="c", class="form-control m-2", type="text", name="url", placeholder="ingrese la url")
            div(class="col-sm-8")
                input( class="btn btn-primary m-3",value="Cargar Producto",type="submit")
        form(class="buttonPage" action="/productos", method="GET") 
            button( class="btn column btn-primary mb-2") Ir a lista de productos

